{
  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "mocha": true
  },

  "globals": {
    "after": true,
    "afterEach": true,
    "before": true,
    "beforeEach": true,
    "describe": true,
    "it": true
  },

  "rules": {
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "max-len": "off"
  },

  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb"
}
